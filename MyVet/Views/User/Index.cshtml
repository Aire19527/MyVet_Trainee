@model IEnumerable<Infraestructure.Entity.Model.UserEntity>


@{
     ViewData["Title"] = "Usuarios";
}

<div class="row">
    <div class="col-md-6">
        <h1>Listado de Usuarios </h1>
    </div> 
    <div class="col-md-6" >
        <a asp-action="Create" class="btn btn-primary float-right mt-3">   <i class="fas fa-user"></i> Nuevo Usuario</a>
    </div>

</div>

<br />
<div class="row">

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Email</th>
                <th scope="col">Opciones</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
            {
                <tr>
                    <th> @user.Name</th>
                    <th> @user.LastName</th>
                    <th> @user.Email</th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.IdUser" class="btn btn-warning"> Editar</a>
                        <a asp-action="Delete" asp-route-id="@user.IdUser" class="btn btn-danger"> Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>




